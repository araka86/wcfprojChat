<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="544" Width="800" Closing="Window_Closing">
    <Grid >
        


        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Margin="221,9,0,0" TextWrapping="Wrap" Text="Имя Юзера" VerticalAlignment="Top" Width="409" Height="29" Grid.ColumnSpan="2"/>
        <Button x:Name="btnConDiscon" Click="Button_Click"  Content="Connect" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top" Height="31" Width="90"/>

        <ListBox x:Name="lbChat" Margin="14,59,32,107" Grid.ColumnSpan="2" KeyDown="Window_KeyDown" />
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Margin="13,431,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="754" Height="70" KeyDown="tbMessage_KeyDown" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
